# ACGS Production Environment Configuration
# Constitutional Hash: cdd01ef066bc6cf2

# Performance Targets
ACGS_PERFORMANCE_P99_TARGET=5
ACGS_PERFORMANCE_RPS_TARGET=100
ACGS_CACHE_HIT_RATE_TARGET=85

# Database Configuration (PostgreSQL - Port 5439)
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5439
POSTGRESQL_DATABASE=acgs
POSTGRESQL_USER=acgs_user
POSTGRESQL_PASSWORD=os.environ.get("PASSWORD")
POSTGRESQL_POOL_SIZE=20
POSTGRESQL_MAX_OVERFLOW=10

# Redis Configuration (Port 6389)
REDIS_HOST=localhost
REDIS_PORT=6389
REDIS_PASSWORD=os.environ.get("PASSWORD")
REDIS_DB=0

# Service Ports
AUTH_SERVICE_PORT=8016
CONSTITUTIONAL_AI_PORT=8001
COORDINATOR_PORT=8008
BLACKBOARD_PORT=8010

# Production Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_TRACING=true

# Docker Compose Settings
POSTGRES_USER=acgs_user
POSTGRES_PASSWORD=os.environ.get("PASSWORD")
POSTGRES_DB=acgs
JWT_SECRET_KEY=acgs_jwt_production_secret_key_2025_very_secure  # TODO: Replace with environment variable - Constitutional Hash: cdd01ef066bc6cf2
CORS_ORIGINS=https://acgs.production.com

# Constitutional Compliance
CONSTITUTIONAL_HASH=cdd01ef066bc6cf2
CONSTITUTIONAL_VALIDATION_ENABLED=true

# GroqCloud Configuration
GROQ_API_KEY=os.environ.get("GROQ_API_KEY")
GROQ_BASE_URL=https://api.groq.com/openai/v1
GROQ_POLICY_INTEGRATION_PORT=8015
GROQ_DEFAULT_MODEL=qwen/qwen3-32b
GROQ_TIER_MAPPING=nano:allam-2-7b,fast:llama-3.1-8b-instant,balanced:qwen/qwen3-32b,premium:llama-3.3-70b-versatile

# WASM Policy Engine Configuration
WASM_POLICY_ENGINE_ENABLED=true
WASM_POLICY_COMPILATION_TIMEOUT=30
WASM_POLICY_CACHE_SIZE=1000
WASM_RUNTIME=wasmtime

# OPA-WASM Integration
OPA_WASM_ENABLED=true
OPA_WASM_POLICIES_PATH=/app/policies
OPA_WASM_CACHE_SIZE=500
OPA_WASM_EVALUATION_TIMEOUT=5
