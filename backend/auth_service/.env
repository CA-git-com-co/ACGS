# Database URL for the authentication service
DATABASE_URL="postgresql://youruser:yourpassword@postgres:5432/yourdatabase_auth"

# --- JWT Settings ---
# Use a strong, unique key for local development.
# This is different from the .env.example one for demonstration.
SECRET_KEY="another-strong-random-secret-key-for-local-dev-e2c5f8b1a3d0" 

# Algorithm for JWT token encoding
ALGORITHM="HS256" # Default algorithm

# Access token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES="30" # Default: 30 minutes

# Refresh token expiration time in days
REFRESH_TOKEN_EXPIRE_DAYS="7" # Default: 7 days

# --- CSRF Protection Settings ---
# Use a different strong, unique key for CSRF in local development.
CSRF_SECRET_KEY="another-local-csrf-secret-key-a1b2c3d4e5f60708"
