# ACGS Phase 3 Staging Environment Configuration
# Production-ready configuration for staging deployment

# Environment
ENVIRONMENT=staging

# Database Configuration
POSTGRES_USER=acgs_user
POSTGRES_PASSWORD=acgs_staging_password_2024_phase3_secure
POSTGRES_DB=acgs_staging
DATABASE_URL=postgresql+asyncpg://acgs_user:acgs_staging_password_2024_phase3_secure@postgres:5432/acgs_staging

# Redis Configuration
REDIS_PASSWORD=acgs_staging_redis_password_2024_phase3_secure
REDIS_URL=redis://:acgs_staging_redis_password_2024_phase3_secure@redis:6379/0

# JWT Configuration
JWT_SECRET_KEY=acgs-staging-secret-key-2024-phase3-production-readiness-jwt-token-signing-secure

# API Keys (staging/test keys)
OPENAI_API_KEY=sk-test-staging-key-placeholder
GEMINI_API_KEY=test-staging-gemini-key-placeholder
GROQ_API_KEY=test-staging-groq-key-placeholder

# Service URLs (internal Docker network)
AC_SERVICE_URL=http://ac_service:8001
INTEGRITY_SERVICE_URL=http://integrity_service:8002
FV_SERVICE_URL=http://fv_service:8003
GS_SERVICE_URL=http://gs_service:8004
PGC_SERVICE_URL=http://pgc_service:8005
OPA_SERVER_URL=http://opa:8181

# Performance Configuration
PERFORMANCE_MAX_POLICY_DECISION_LATENCY_MS=50
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300

# Security Configuration
SECURITY_RATE_LIMIT_REQUESTS=100
SECURITY_RATE_LIMIT_WINDOW_MINUTES=1

# Logging
LOG_LEVEL=INFO

# Monitoring
METRICS_ENABLED=true

# Cryptographic Configuration
CRYPTO_KEY_SIZE=2048
HASH_ALGORITHM=SHA3-256
SIGNATURE_ALGORITHM=RSA-PSS-SHA256

# Policy Configuration
POLICY_QUALITY_THRESHOLD=0.80
MAX_SYNTHESIS_LOOPS=3

# Parallel Processing
PARALLEL_MAX_CONCURRENT=50
PARALLEL_BATCH_SIZE=25

# CORS Configuration
BACKEND_CORS_ORIGINS=http://localhost:8080,http://localhost:3002
