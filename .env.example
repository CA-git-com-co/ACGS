# Main Database URL (used by Alembic and potentially services if not overridden)
# Use the asyncpg driver. Services and Alembic (with adjustments) will use this.
DATABASE_URL=postgresql+asyncpg://user:password@postgres_db:5432/acgs_pgp_db

# Auth Service Specific
SECRET_KEY=your_strong_secret_key_for_jwt # CHANGE THIS!
REFRESH_TOKEN_EXPIRE_DAYS=7
CSRF_SECRET_KEY=your_strong_csrf_secret_key # CHANGE THIS!
