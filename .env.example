# ACGS/.env.example

# General Project Settings
PROJECT_NAME="ACGS-PGP"
ENVIRONMENT="development" # development, staging, production

# PostgreSQL Database Configuration (used by all services and Alembic)
DATABASE_URL="postgresql+asyncpg://acgs_user:acgs_password@postgres_db:5432/acgs_pgp_db"
# For Alembic runner (sync version, will be converted in env.py)
# DATABASE_URL_ALEMBIC="postgresql://acgs_user:acgs_password@postgres_db:5432/acgs_pgp_db"

# Auth Service Specific
AUTH_SERVICE_SECRET_KEY="your_strong_jwt_secret_key_for_auth_service"
AUTH_SERVICE_ALGORITHM="HS256"
AUTH_SERVICE_ACCESS_TOKEN_EXPIRE_MINUTES=30
AUTH_SERVICE_REFRESH_TOKEN_EXPIRE_DAYS=7
AUTH_SERVICE_CSRF_SECRET_KEY="your_strong_csrf_secret_key_for_auth_service"

# CORS Origins (comma-separated list of URLs)
# Example: BACKEND_CORS_ORIGINS="http://localhost:3001,http://localhost:3000,https://your.frontend.domain"
BACKEND_CORS_ORIGINS="http://localhost:3001,http://localhost:3000" # Adjust port if frontend runs elsewhere

# Service URLs (for inter-service communication if not using Docker Compose/K8s DNS directly in code)
# These are typically resolved by Docker/K8s service names, but can be overridden for local dev outside containers.
AC_SERVICE_URL="http://ac_service:8001/api/v1"
AUTH_SERVICE_URL="http://auth_service:8000/api/v1" # Note: auth_service main.py uses /auth prefix
FV_SERVICE_URL="http://fv_service:8003/api/v1"
GS_SERVICE_URL="http://gs_service:8005/api/v1" # Port from nginx.conf for pgc, assuming gs is 8005
INTEGRITY_SERVICE_URL="http://integrity_service:8002/api/v1"
PGC_SERVICE_URL="http://pgc_service:8005/api/v1" # Port from nginx.conf

# LLM Integration (for GS Service)
LLM_API_ENDPOINT="http://mock_llm_service:80/generate" # Example
LLM_API_KEY="your_llm_api_key"

# Formal Verification Tool (for FV Service)
VERIFICATION_TOOL_ENDPOINT="http://mock_verification_tool:80/verify" # Example

# Frontend Specific (these go into frontend/.env)
# REACT_APP_API_BASE_URL="http://localhost:8000/api" # If Nginx gateway is on port 8000
# REACT_APP_API_BASE_URL="/api" # If frontend is served by the same Nginx or proxied correctly

# Logging Level
LOG_LEVEL="INFO"

# Default Admin User (optional, for initial seeding)
# DEFAULT_ADMIN_EMAIL="admin@example.com"
# DEFAULT_ADMIN_USERNAME="admin"
# DEFAULT_ADMIN_PASSWORD="changeme"
