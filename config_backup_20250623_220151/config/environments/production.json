{
  "environment": "production",
  "version": "1.0.0",
  "database": {
    "host": "prod-db.acgs.internal",
    "port": 5432,
    "name": "acgs_production",
    "user": "acgs_user",
    "ssl_mode": "verify-full",
    "pool_size": 20,
    "max_overflow": 50,
    "echo": false,
    "read_replicas": ["prod-db-read-1.acgs.internal", "prod-db-read-2.acgs.internal"]
  },
  "redis": {
    "host": "prod-redis.acgs.internal",
    "port": 6379,
    "db": 0,
    "password": "${PROD_REDIS_PASSWORD}",
    "ssl": true,
    "cluster_mode": true,
    "sentinel_hosts": [
      "redis-sentinel-1.acgs.internal:26379",
      "redis-sentinel-2.acgs.internal:26379",
      "redis-sentinel-3.acgs.internal:26379"
    ]
  },
  "services": {
    "auth": {
      "name": "Authentication Service",
      "port": 8000,
      "host": "0.0.0.0",
      "health_path": "/health",
      "debug": false,
      "replicas": 3
    },
    "ac": {
      "name": "Constitutional AI Service",
      "port": 8001,
      "host": "0.0.0.0",
      "health_path": "/health",
      "debug": false,
      "replicas": 3
    },
    "integrity": {
      "name": "Integrity Service",
      "port": 8002,
      "host": "0.0.0.0",
      "health_path": "/health",
      "debug": false,
      "replicas": 2
    },
    "fv": {
      "name": "Formal Verification Service",
      "port": 8003,
      "host": "0.0.0.0",
      "health_path": "/health",
      "debug": false,
      "replicas": 2
    },
    "gs": {
      "name": "Governance Synthesis Service",
      "port": 8004,
      "host": "0.0.0.0",
      "health_path": "/health",
      "debug": false,
      "replicas": 3
    },
    "pgc": {
      "name": "Policy Governance Service",
      "port": 8005,
      "host": "0.0.0.0",
      "health_path": "/health",
      "debug": false,
      "replicas": 3
    },
    "ec": {
      "name": "Evolutionary Computation Service",
      "port": 8006,
      "host": "0.0.0.0",
      "health_path": "/health",
      "debug": false,
      "replicas": 2
    }
  },
  "logging": {
    "level": "INFO",
    "format": "json",
    "output": "file",
    "file_rotation": true,
    "structured": true,
    "max_file_size": "500MB",
    "backup_count": 10,
    "compression": true
  },
  "security": {
    "jwt_secret": "${PROD_JWT_SECRET}",
    "encryption_key": "${PROD_ENCRYPTION_KEY}",
    "ssl_enabled": true,
    "cors_origins": ["https://acgs.com", "https://app.acgs.com"],
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 200,
      "burst_limit": 50
    },
    "security_headers": true,
    "csrf_protection": true
  },
  "quantumagi": {
    "constitution_hash": "cdd01ef066bc6cf2",
    "solana_network": "mainnet",
    "rpc_url": "https://api.mainnet-beta.solana.com",
    "commitment": "finalized",
    "max_retries": 10,
    "timeout_seconds": 120,
    "backup_rpc_urls": ["https://solana-api.projectserum.com", "https://rpc.ankr.com/solana"]
  },
  "monitoring": {
    "metrics_enabled": true,
    "tracing_enabled": true,
    "health_check_interval": 10,
    "prometheus_port": 9090,
    "alerting_enabled": true,
    "sla_monitoring": true,
    "uptime_target": 99.9
  },
  "features": {
    "hot_reload": false,
    "debug_mode": false,
    "test_mode": false,
    "mock_external_services": false,
    "feature_flags": true
  },
  "performance": {
    "cache_ttl": 600,
    "connection_timeout": 10,
    "request_timeout": 30,
    "max_concurrent_requests": 1000,
    "auto_scaling": true,
    "circuit_breaker": true
  },
  "backup": {
    "enabled": true,
    "frequency": "every_6_hours",
    "retention_days": 30,
    "encryption": true,
    "offsite_backup": true
  }
}
