{
  "check_interval": 30,
  "alert_cooldown": 300,
  "max_retries": 3,
  "timeout": 10,
  "alerting": {
    "enabled": true,
    "channels": {
      "prometheus": {
        "enabled": true,
        "url": "http://localhost:9093/api/v1/alerts"
      },
      "slack": {
        "enabled": false,
        "webhook_url": ""
      },
      "email": {
        "enabled": false,
        "smtp_server": "",
        "smtp_port": 587,
        "username": "",
        "password": "",
        "recipients": []
      }
    }
  },
  "thresholds": {
    "response_time_warning_ms": 500,
    "response_time_critical_ms": 2000,
    "error_rate_warning": 0.05,
    "error_rate_critical": 0.1,
    "uptime_warning": 95.0,
    "uptime_critical": 90.0
  },
  "services": {
    "auth_service": {
      "port": 8000,
      "endpoint": "/health",
      "critical": true,
      "expected_response_fields": ["status", "service", "version"]
    },
    "ac_service": {
      "port": 8001,
      "endpoint": "/health",
      "critical": true,
      "expected_response_fields": ["status", "service", "version"]
    },
    "integrity_service": {
      "port": 8002,
      "endpoint": "/health",
      "critical": true,
      "expected_response_fields": ["status", "service", "version"]
    },
    "fv_service": {
      "port": 8003,
      "endpoint": "/health",
      "critical": true,
      "expected_response_fields": ["status", "service", "version"]
    },
    "gs_service": {
      "port": 8004,
      "endpoint": "/health",
      "critical": true,
      "expected_response_fields": ["status", "service", "version"]
    },
    "pgc_service": {
      "port": 8005,
      "endpoint": "/health",
      "critical": true,
      "expected_response_fields": ["status", "service", "version"]
    },
    "ec_service": {
      "port": 8006,
      "endpoint": "/health",
      "critical": true,
      "expected_response_fields": ["status", "service", "version"]
    }
  },
  "infrastructure": {
    "postgresql": {
      "host": "localhost",
      "port": 5432,
      "database": "acgs_pgp_db",
      "user": "acgs_user",
      "password": "acgs_password",
      "critical": true,
      "connection_timeout": 5,
      "query_timeout": 10
    },
    "redis": {
      "host": "localhost",
      "port": 6379,
      "critical": true,
      "connection_timeout": 5
    },
    "prometheus": {
      "host": "localhost",
      "port": 9090,
      "critical": false,
      "endpoint": "/-/healthy"
    },
    "grafana": {
      "host": "localhost",
      "port": 3002,
      "critical": false,
      "endpoint": "/api/health"
    }
  },
  "blockchain": {
    "solana_rpc": "https://api.devnet.solana.com",
    "constitution_hash": "cdd01ef066bc6cf2",
    "critical": true,
    "program_ids": {
      "quantumagi_core": "8eRUCnQsDxqK7vjp5XsYs7C3NGpdhzzaMW8QQGzfTUV4",
      "appeals": "CXKCLqyzxqyqTbEgpNbYR5qkC691BdiKMAB1nk6BMoFJ",
      "logging": "CjZi5hi9qggBzbXDht9YSJhN5cw7Bhz3rHhn63QQcPQo"
    }
  },
  "reporting": {
    "enabled": true,
    "interval_minutes": 5,
    "retention_days": 30,
    "output_directory": "logs/health_reports",
    "formats": ["json", "prometheus"]
  },
  "escalation": {
    "critical_alert_escalation_minutes": 5,
    "high_alert_escalation_minutes": 15,
    "medium_alert_escalation_minutes": 60,
    "max_escalation_attempts": 3
  }
}
