{
  "backup_schedule": {
    "database_backup": {
      "frequency": "every 6 hours",
      "retention_days": 30,
      "compression": true,
      "encryption": true
    },
    "configuration_backup": {
      "frequency": "daily",
      "retention_days": 90,
      "includes": ["config/", "blockchain/programs/", "services/*/config/"]
    },
    "blockchain_state_backup": {
      "frequency": "every 12 hours",
      "retention_days": 7,
      "includes": ["constitution_hash_history", "governance_decisions", "audit_trails"]
    }
  },
  "disaster_recovery": {
    "rto_target_minutes": 15,
    "rpo_target_minutes": 60,
    "backup_locations": ["primary_datacenter", "secondary_datacenter", "cloud_storage"],
    "automated_failover": true,
    "health_check_interval_seconds": 30
  },
  "backup_validation": {
    "test_restore_frequency": "weekly",
    "integrity_check_frequency": "daily",
    "automated_testing": true
  }
}
