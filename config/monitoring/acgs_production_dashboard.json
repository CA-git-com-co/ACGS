{
  "dashboard": {
    "id": null,
    "title": "ACGS-PGP Production Dashboard",
    "tags": ["acgs-pgp", "production", "constitutional-ai"],
    "timezone": "UTC",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Health Overview",
        "type": "stat",
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "up{job=~\"acgs-.*\"}",
            "legendFormat": "{{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 0.8 },
                { "color": "green", "value": 0.9 }
              ]
            },
            "unit": "percent"
          }
        }
      },
      {
        "id": 2,
        "title": "Constitutional Compliance Rate",
        "type": "gauge",
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 0 },
        "targets": [
          {
            "expr": "avg(acgs_constitutional_compliance_rate)",
            "legendFormat": "Compliance Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 0.75 },
                { "color": "green", "value": 0.95 }
              ]
            },
            "min": 0,
            "max": 1,
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 3,
        "title": "Response Time P95",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=~\"acgs-.*\"}[5m]))",
            "legendFormat": "{{service}} P95"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (seconds)",
            "max": 2.0,
            "min": 0
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": { "params": [2.0], "type": "gt" },
              "operator": { "type": "and" },
              "query": { "params": ["A", "5m", "now"] },
              "reducer": { "params": [], "type": "avg" },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "10s",
          "handler": 1,
          "name": "High Response Time Alert",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 4,
        "title": "Service Status Matrix",
        "type": "table",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "up{job=~\"acgs-.*\"}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": { "Time": true },
              "indexByName": {},
              "renameByName": {
                "instance": "Service",
                "Value": "Status"
              }
            }
          }
        ]
      },
      {
        "id": 5,
        "title": "Constitutional Hash Validation",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "acgs_constitutional_hash_valid{hash=\"cdd01ef066bc6cf2\"}",
            "legendFormat": "Hash Valid"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            },
            "mappings": [
              { "options": { "0": { "text": "INVALID" } }, "type": "value" },
              { "options": { "1": { "text": "VALID" } }, "type": "value" }
            ]
          }
        }
      },
      {
        "id": 6,
        "title": "Blockchain Cost Monitoring",
        "type": "graph",
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 8 },
        "targets": [
          {
            "expr": "rate(acgs_blockchain_cost_sol_total[5m])",
            "legendFormat": "SOL Cost Rate"
          }
        ],
        "yAxes": [
          {
            "label": "SOL per minute",
            "max": 0.01,
            "min": 0
          }
        ]
      },
      {
        "id": 7,
        "title": "DGM Safety Patterns Status",
        "type": "stat",
        "gridPos": { "h": 6, "w": 8, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "acgs_dgm_sandbox_active",
            "legendFormat": "Sandbox Active"
          },
          {
            "expr": "acgs_dgm_human_review_queue",
            "legendFormat": "Human Review Queue"
          },
          {
            "expr": "acgs_dgm_rollback_ready",
            "legendFormat": "Rollback Ready"
          }
        ]
      },
      {
        "id": 8,
        "title": "Emergency Shutdown Readiness",
        "type": "stat",
        "gridPos": { "h": 6, "w": 8, "x": 8, "y": 16 },
        "targets": [
          {
            "expr": "acgs_emergency_shutdown_ready",
            "legendFormat": "Emergency Shutdown Ready"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            },
            "mappings": [
              { "options": { "0": { "text": "NOT READY" } }, "type": "value" },
              { "options": { "1": { "text": "READY" } }, "type": "value" }
            ]
          }
        }
      },
      {
        "id": 9,
        "title": "Resource Utilization",
        "type": "graph",
        "gridPos": { "h": 6, "w": 8, "x": 16, "y": 16 },
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=~\"acgs-.*\"}[5m]) * 100",
            "legendFormat": "{{service}} CPU %"
          },
          {
            "expr": "process_resident_memory_bytes{job=~\"acgs-.*\"} / 1024 / 1024",
            "legendFormat": "{{service}} Memory MB"
          }
        ]
      },
      {
        "id": 10,
        "title": "Alert Summary",
        "type": "logs",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 22 },
        "targets": [
          {
            "expr": "{job=\"alertmanager\"}",
            "legendFormat": ""
          }
        ]
      }
    ],
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        }
      ]
    },
    "editable": true,
    "gnetId": null,
    "graphTooltip": 0,
    "links": [],
    "schemaVersion": 16,
    "style": "dark",
    "templating": {
      "list": [
        {
          "allValue": null,
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "datasource": "Prometheus",
          "definition": "label_values(up{job=~\"acgs-.*\"}, job)",
          "hide": 0,
          "includeAll": true,
          "label": "Service",
          "multi": true,
          "name": "service",
          "options": [],
          "query": "label_values(up{job=~\"acgs-.*\"}, job)",
          "refresh": 1,
          "regex": "",
          "skipUrlSync": false,
          "sort": 0,
          "tagValuesQuery": "",
          "tags": [],
          "tagsQuery": "",
          "type": "query",
          "useTags": false
        }
      ]
    },
    "version": 1
  }
}
