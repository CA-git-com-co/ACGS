# ======================
# ENVIRONMENT SETTINGS
# ======================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
CONSTITUTIONAL_HASH=cdd01ef066bc6cf2

# ======================
# DATABASE CONFIGURATION
# ======================
POSTGRES_USER=acgs_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=acgs
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Connection pool settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# ======================
# REDIS CONFIGURATION
# ======================
REDIS_PASSWORD=your_redis_password_here
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_MAX_MEMORY=256mb
REDIS_POLICY=allkeys-lru

# ======================
# AUTHENTICATION & SECURITY
# ======================
JWT_SECRET_KEY=your_jwt_secret_key_here
AUTH_SECRET_KEY=your_auth_secret_key_here
SECRET_KEY=your_application_secret_key_here

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_MINUTES=10080

# ======================
# SERVICE CONFIGURATION
# ======================
# Service ports
AUTH_SERVICE_PORT=8000
AC_SERVICE_PORT=8001
INTEGRITY_SERVICE_PORT=8002
FV_SERVICE_PORT=8003
GS_SERVICE_PORT=8004
PGC_SERVICE_PORT=8005
EC_SERVICE_PORT=8006

# Service workers
WORKERS=1
RELOAD=true

# ======================
# INFRASTRUCTURE PORTS
# ======================
POSTGRES_PORT=5432
REDIS_PORT=6379
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
ALERTMANAGER_PORT=9093
HAPROXY_HTTP_PORT=80
HAPROXY_HTTPS_PORT=443
HAPROXY_STATS_PORT=8404

# ======================
# MONITORING CONFIGURATION
# ======================
# Prometheus
PROMETHEUS_RETENTION=15d
PROMETHEUS_RETENTION_SIZE=10GB

# Grafana
GF_ADMIN_USER=admin
GF_ADMIN_PASSWORD=admin
GF_INSTALL_PLUGINS=grafana-clock-panel,grafana-simple-json-datasource

# Grafana Database
GRAFANA_DB_NAME=grafana
GRAFANA_DB_USER=grafana
GRAFANA_DB_PASSWORD=grafana

# Alertmanager
ALERTMANAGER_LOG_LEVEL=info

# Exporters
NODE_EXPORTER_PORT=9100
POSTGRES_EXPORTER_PORT=9187
REDIS_EXPORTER_PORT=9121
LOKI_PORT=3100
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268
JAEGER_AGENT_PORT=6831

# ======================
# AI PROVIDER CONFIGURATION
# ======================
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Groq
GROQ_API_KEY=your_groq_api_key_here

# Google Gemini
GEMINI_API_KEY=your_gemini_api_key_here

# ======================
# DEVELOPMENT TOOLS
# ======================
# PgAdmin
PGADMIN_EMAIL=admin@acgs.dev
PGADMIN_PASSWORD=dev_password

# Redis Commander
REDIS_COMMANDER_PORT=8081

# ======================
# DOCKER CONFIGURATION
# ======================
# Docker Compose project name
COMPOSE_PROJECT_NAME=acgs-dev

# Build target
BUILD_TARGET=development

# ======================
# PERFORMANCE SETTINGS
# ======================
# Resource limits
MEMORY_LIMIT=512MB
CPU_LIMIT=0.5

# Cache settings
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=1000

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=1000
RATE_LIMIT_WINDOW=60

# ======================
# EXTERNAL SERVICES
# ======================
# Sentry (optional)
SENTRY_DSN=
SENTRY_ENABLED=false
SENTRY_TRACES_SAMPLE_RATE=0.1

# Jaeger (optional)
JAEGER_ENABLED=false
JAEGER_AGENT_HOST=jaeger-agent

# ======================
# BACKUP CONFIGURATION
# ======================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# ======================
# SSL/TLS CONFIGURATION
# ======================
SSL_ENABLED=false
SSL_CERT_PATH=/certs/cert.pem
SSL_KEY_PATH=/certs/key.pem

# ======================
# CORS CONFIGURATION
# ======================
CORS_ORIGINS=["*"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["*"]

# ======================
# LOGGING CONFIGURATION
# ======================
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_MAX_FILE_SIZE=10MB
LOG_BACKUP_COUNT=5

# ======================
# HEALTH CHECK CONFIGURATION
# ======================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# ======================
# FEATURE FLAGS
# ======================
SKIP_HEALTH_CHECK=false
SKIP_MONITORING=false
FORCE_REBUILD=false
DRY_RUN=false

