# ACGS Production Environment Configuration
# This file contains production-specific environment variables

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# Database Configuration
POSTGRES_USER=acgs_prod
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_DB=acgs_production
DATABASE_URL=postgresql+asyncpg://acgs_prod:${POSTGRES_PASSWORD}@postgres:5432/acgs_production

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
REDIS_PASSWORD=${REDIS_PASSWORD}

# Security Configuration
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=4
BCRYPT_ROUNDS=14

# API Keys (Production)
OPENAI_API_KEY=${OPENAI_API_KEY}
GEMINI_API_KEY=${GEMINI_API_KEY}
GROQ_API_KEY=${GROQ_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

# Service URLs (Production)
AUTH_SERVICE_URL=http://auth-service:8000
AC_SERVICE_URL=http://ac-service:8001
INTEGRITY_SERVICE_URL=http://integrity-service:8002
FV_SERVICE_URL=http://fv-service:8003
GS_SERVICE_URL=http://gs-service:8004
PGC_SERVICE_URL=http://pgc-service:8005
EC_SERVICE_URL=http://ec-service:8006

# Performance Configuration (Production)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=1
CACHE_TTL_SECONDS=600
MAX_CONCURRENT_REQUESTS=500
REQUEST_TIMEOUT_SECONDS=30

# Development Features (Disabled in Production)
RELOAD=false
HOT_RELOAD=false
AUTO_MIGRATION=false
SEED_DATA=false
MOCK_EXTERNAL_APIS=false

# Monitoring Configuration (Production)
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
JAEGER_ENABLED=true
HEALTH_CHECK_INTERVAL=10

# Security Configuration (Production - Maximum Security)
CORS_ORIGINS=["https://api.acgs-pgp.com", "https://acgs-pgp.com"]
CORS_ALLOW_CREDENTIALS=true
CSRF_PROTECTION=true
SECURE_COOKIES=true
HTTPS_ONLY=true

# Blockchain Configuration (Production)
SOLANA_CLUSTER=mainnet-beta
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
ANCHOR_PROVIDER_URL=https://api.mainnet-beta.solana.com
ANCHOR_WALLET=/app/keys/production-wallet.json

# Constitutional AI Configuration (Production)
CONSTITUTIONAL_FIDELITY_THRESHOLD=0.95
POLICY_QUALITY_THRESHOLD=0.90
MAX_SYNTHESIS_LOOPS=5
ENABLE_EXPERIMENTAL_FEATURES=false

# Formal Verification Configuration (Production)
Z3_TIMEOUT_SECONDS=60
MAX_VERIFICATION_DEPTH=15
PARALLEL_VERIFICATION=true

# Governance Synthesis Configuration (Production)
MAX_POLICY_GENERATION_TIME_SECONDS=300
ENABLE_POLICY_CACHING=true
POLICY_CACHE_TTL_SECONDS=1800

# Policy Governance Configuration (Production)
OPA_SERVER_URL=http://opa:8181
POLICY_DECISION_TIMEOUT_MS=25
ENABLE_POLICY_DEBUGGING=false

# Evolutionary Computation Configuration (Production)
POPULATION_SIZE=100
MAX_GENERATIONS=50
MUTATION_RATE=0.02
CROSSOVER_RATE=0.95

# File Storage Configuration (Production)
STORAGE_TYPE=s3
STORAGE_BUCKET=acgs-production-storage
MAX_FILE_SIZE_MB=100

# Email Configuration (Production)
EMAIL_PROVIDER=sendgrid
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USERNAME=${SMTP_USERNAME}
SMTP_PASSWORD=${SMTP_PASSWORD}
FROM_EMAIL=noreply@acgs-pgp.com

# Webhook Configuration (Production)
WEBHOOK_SECRET=${WEBHOOK_SECRET}
WEBHOOK_TIMEOUT_SECONDS=15

# Feature Flags (Production)
ENABLE_FEATURE_A=true
ENABLE_FEATURE_B=false
ENABLE_BETA_FEATURES=false
ENABLE_DEBUG_ENDPOINTS=false

# Development Tools (Disabled in Production)
ENABLE_SWAGGER_UI=false
ENABLE_REDOC=false
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILING=false

# Testing Configuration (Production)
TEST_DATABASE_URL=postgresql+asyncpg://acgs_prod:${POSTGRES_PASSWORD}@postgres:5432/acgs_production_test
TEST_REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/15
PYTEST_TIMEOUT=120
COVERAGE_THRESHOLD=95

# Backup Configuration (Production)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 1 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=acgs-production-backups

# SSL/TLS Configuration (Production)
SSL_CERT_PATH=/app/ssl/production.crt
SSL_KEY_PATH=/app/ssl/production.key
SSL_CA_PATH=/app/ssl/ca.crt

# Load Balancer Configuration (Production)
LOAD_BALANCER_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=5
HEALTH_CHECK_TIMEOUT=3

# Scaling Configuration (Production)
MIN_REPLICAS=3
MAX_REPLICAS=10
CPU_THRESHOLD=60
MEMORY_THRESHOLD=70

# Alerting Configuration (Production)
ALERT_EMAIL=alerts@acgs-pgp.com
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}
PAGERDUTY_INTEGRATION_KEY=${PAGERDUTY_INTEGRATION_KEY}

# Compliance Configuration (Production)
AUDIT_LOGGING=true
DATA_RETENTION_DAYS=2555  # 7 years
GDPR_COMPLIANCE=true
HIPAA_COMPLIANCE=true
SOC2_COMPLIANCE=true
FEDRAMP_COMPLIANCE=true

# High Availability Configuration (Production)
MULTI_AZ_DEPLOYMENT=true
DISASTER_RECOVERY_ENABLED=true
RTO_MINUTES=15
RPO_MINUTES=5

# Performance Monitoring (Production)
APM_ENABLED=true
DISTRIBUTED_TRACING=true
METRICS_RETENTION_DAYS=90
LOG_RETENTION_DAYS=365

# Security Monitoring (Production)
SECURITY_SCANNING=true
VULNERABILITY_SCANNING=true
INTRUSION_DETECTION=true
THREAT_MONITORING=true
