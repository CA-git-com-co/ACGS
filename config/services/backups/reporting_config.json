{
  "report_intervals": {
    "hourly": true,
    "daily": true,
    "weekly": true,
    "monthly": true
  },
  "output_formats": ["json", "csv", "html"],
  "output_directory": "reports",
  "retention_days": 90,
  "email_enabled": false,
  "dashboard_integration": true,
  "sla_targets": {
    "uptime_percentage": 99.5,
    "response_time_ms": 500.0,
    "concurrent_actions": 1000,
    "sol_transaction_cost": 0.01,
    "compliance_accuracy": 95.0
  },
  "report_templates": {
    "executive_summary": {
      "enabled": true,
      "include_trends": true,
      "include_recommendations": true,
      "include_charts": false
    },
    "technical_details": {
      "enabled": true,
      "include_raw_metrics": true,
      "include_service_breakdown": true,
      "include_error_analysis": true
    },
    "compliance_report": {
      "enabled": true,
      "include_constitutional_metrics": true,
      "include_governance_workflows": true,
      "include_audit_trail": true
    }
  },
  "notification_settings": {
    "email": {
      "enabled": false,
      "smtp_server": "",
      "smtp_port": 587,
      "username": "",
      "password": "",
      "recipients": ["ops@acgs.ai", "management@acgs.ai"],
      "send_on_breach": true,
      "send_daily_summary": true,
      "send_weekly_summary": true
    },
    "slack": {
      "enabled": false,
      "webhook_url": "",
      "channel": "#acgs-reports",
      "send_on_breach": true,
      "send_daily_summary": false
    },
    "webhook": {
      "enabled": false,
      "url": "",
      "headers": {},
      "send_on_breach": true,
      "send_all_reports": false
    }
  },
  "data_sources": {
    "sla_reports": {
      "directory": "logs/sla_reports",
      "file_pattern": "sla_report_*.json",
      "latest_file": "latest_sla_report.json"
    },
    "health_reports": {
      "directory": "logs/health_reports",
      "file_pattern": "health_report_*.json"
    },
    "prometheus_metrics": {
      "enabled": true,
      "url": "http://localhost:9090",
      "queries": {
        "uptime": "avg(up{job=~\"acgs-.*-service\"})",
        "response_time": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=~\"acgs-.*-service\"}[5m]))",
        "error_rate": "rate(acgs_request_errors_total[5m]) / rate(acgs_requests_total[5m])"
      }
    }
  },
  "analysis_settings": {
    "trend_analysis": {
      "enabled": true,
      "lookback_periods": [1, 6, 24, 168, 720],
      "statistical_methods": ["mean", "median", "percentiles"],
      "anomaly_detection": true
    },
    "performance_baselines": {
      "auto_update": true,
      "update_frequency_days": 7,
      "outlier_threshold": 2.0,
      "seasonal_adjustment": true
    },
    "predictive_analysis": {
      "enabled": false,
      "forecast_horizon_hours": 24,
      "confidence_interval": 0.95,
      "models": ["linear_regression", "arima"]
    }
  },
  "export_settings": {
    "json": {
      "pretty_print": true,
      "include_metadata": true,
      "compression": false
    },
    "csv": {
      "delimiter": ",",
      "include_headers": true,
      "date_format": "ISO8601"
    },
    "html": {
      "template": "default",
      "include_charts": true,
      "responsive_design": true,
      "css_framework": "bootstrap"
    },
    "pdf": {
      "enabled": false,
      "template": "executive",
      "include_charts": true,
      "page_size": "A4"
    }
  },
  "integration": {
    "grafana": {
      "enabled": true,
      "url": "http://localhost:3001",
      "api_key": "",
      "dashboard_id": "acgs-sla-dashboard",
      "auto_update_annotations": true
    },
    "prometheus": {
      "enabled": true,
      "url": "http://localhost:9090",
      "push_gateway": "http://localhost:9091",
      "custom_metrics": true
    },
    "external_apis": {
      "status_page": {
        "enabled": false,
        "url": "",
        "api_key": "",
        "auto_update": false
      },
      "incident_management": {
        "enabled": false,
        "provider": "pagerduty",
        "api_key": "",
        "service_id": ""
      }
    }
  },
  "security": {
    "encrypt_reports": false,
    "access_control": {
      "enabled": false,
      "allowed_ips": [],
      "api_key_required": false
    },
    "data_anonymization": {
      "enabled": false,
      "fields_to_anonymize": []
    }
  },
  "performance": {
    "max_concurrent_reports": 3,
    "report_timeout_minutes": 30,
    "cache_results": true,
    "cache_ttl_minutes": 60,
    "batch_processing": true
  },
  "debugging": {
    "log_level": "INFO",
    "detailed_timing": false,
    "save_intermediate_data": false,
    "validate_data_integrity": true
  }
}
