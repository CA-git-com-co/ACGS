# ACGS-PGP v8 Environment Configuration Example
# Copy this file to .env and configure for your environment

# Service Configuration
SERVICE_NAME=acgs-pgp-v8
SERVICE_PORT=8010
SERVICE_HOST=0.0.0.0
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# Constitutional Governance
CONSTITUTIONAL_HASH=cdd01ef066bc6cf2
CONSTITUTIONAL_COMPLIANCE_THRESHOLD=0.8
GOVERNANCE_VALIDATION_ENABLED=true
ENFORCEMENT_MODE=strict

# Database Configuration
DATABASE_URL=postgresql://acgs_user:acgs_password@localhost:5432/acgs_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100
REDIS_RETRY_ON_TIMEOUT=true
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_HEALTH_CHECK_INTERVAL=30

# Service Integration URLs
AUTH_SERVICE_URL=http://localhost:8000
AC_SERVICE_URL=http://localhost:8001
INTEGRITY_SERVICE_URL=http://localhost:8002
FV_SERVICE_URL=http://localhost:8003
GS_SERVICE_URL=http://localhost:8004
PGC_SERVICE_URL=http://localhost:8005
EC_SERVICE_URL=http://localhost:8006

# Generation Engine Configuration
MAX_POLICY_LENGTH=5000
MIN_CONSTITUTIONAL_COMPLIANCE=0.8
FAULT_TOLERANCE_LEVEL=2
CONSENSUS_THRESHOLD=0.7
MAX_CONCURRENT_GENERATIONS=10
GENERATION_TIMEOUT_SECONDS=300
RESPONSE_TIME_TARGET_MS=500

# Multi-Model LLM Ensemble
PRIMARY_MODEL=qwen3-32b
FALLBACK_MODELS=deepseek-chat,qwen3-235b,deepseek-r1
CONSENSUS_STRATEGY=weighted_average
MODEL_TIMEOUT_SECONDS=30
RETRY_ATTEMPTS=3

# Quantum-Inspired Parameters
QUANTUM_ERROR_CORRECTION=true
SEMANTIC_ENTANGLEMENT_STRENGTH=0.5
DECOHERENCE_THRESHOLD=0.1
QUANTUM_STATE_PERSISTENCE=true
ENTANGLEMENT_CACHE_TTL=3600

# Stabilizer Execution Environment
MAX_CONCURRENT_EXECUTIONS=50
EXECUTION_TIMEOUT_SECONDS=600
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30
HEALTH_CHECK_INTERVAL=10

# Syndrome Diagnostic Engine
ML_MODEL_ENABLED=true
ERROR_CLASSIFICATION_THRESHOLD=0.7
RECOVERY_RECOMMENDATION_ENABLED=true
DIAGNOSTIC_CACHE_TTL=1800
AUDIT_TRAIL_ENABLED=true

# Security Configuration
JWT_SECRET_KEY=acgs-pgp-v8-secret-key-2024
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
CORS_ENABLED=true
CORS_ORIGINS=*
RATE_LIMITING_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Monitoring and Observability
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_PATH=/metrics
HEALTH_CHECK_PATH=/health
STRUCTURED_LOGGING=true
TRACE_SAMPLING_RATE=0.1

# Performance Optimization
ASYNC_WORKERS=4
CONNECTION_POOL_SIZE=100
REQUEST_TIMEOUT=30
KEEP_ALIVE_TIMEOUT=5
MAX_REQUEST_SIZE=10485760
GZIP_COMPRESSION=true

# Caching Strategy
POLICY_GENERATION_CACHE_TTL=3600
CONSTITUTIONAL_VALIDATION_CACHE_TTL=1800
DIAGNOSTIC_RESULTS_CACHE_TTL=900
REPRESENTATION_CACHE_TTL=7200
CACHE_COMPRESSION=true

# Error Handling
MAX_RETRIES=3
RETRY_DELAY_SECONDS=1
EXPONENTIAL_BACKOFF=true
CIRCUIT_BREAKER_ENABLED=true
FALLBACK_RESPONSES_ENABLED=true

# Audit and Compliance
AUDIT_ENABLED=true
LOG_ALL_REQUESTS=true
LOG_POLICY_GENERATIONS=true
LOG_CONSTITUTIONAL_VALIDATIONS=true
RETENTION_DAYS=90
ENCRYPTION_ENABLED=true

# Development and Testing
MOCK_EXTERNAL_SERVICES=false
ENABLE_DEBUG_ENDPOINTS=false
TEST_DATA_ENABLED=false
PROFILING_ENABLED=false

# Quantumagi Integration
QUANTUMAGI_ENABLED=true
QUANTUMAGI_DEVNET_ENDPOINT=https://api.devnet.solana.com
QUANTUMAGI_PROGRAM_ID=8eRUCnQs...
CONSTITUTIONAL_HASH_VALIDATION=true
BLOCKCHAIN_SYNC_ENABLED=true

# Optional: External API Keys (if needed)
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# GROQ_API_KEY=your_groq_api_key_here
