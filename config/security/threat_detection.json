{
  "threat_detection": {
    "enabled": true,
    "detection_rules": [
      {
        "name": "Suspicious Authentication Patterns",
        "pattern": "multiple_failed_logins",
        "threshold": 5,
        "window_minutes": 10,
        "action": "block_ip"
      },
      {
        "name": "Unusual API Access Patterns",
        "pattern": "high_frequency_requests",
        "threshold": 1000,
        "window_minutes": 5,
        "action": "rate_limit"
      },
      {
        "name": "Privilege Escalation Attempts",
        "pattern": "unauthorized_admin_access",
        "threshold": 1,
        "window_minutes": 1,
        "action": "alert_security_team"
      }
    ],
    "response_actions": {
      "block_ip": {
        "duration_minutes": 60,
        "notification": true
      },
      "rate_limit": {
        "limit_requests_per_minute": 10,
        "duration_minutes": 30
      },
      "alert_security_team": {
        "channels": [
          "slack",
          "email",
          "pagerduty"
        ],
        "severity": "high"
      }
    }
  }
}