# Test Environment Configuration
# This file contains configuration values specifically for testing

# Environment
ENVIRONMENT=testing

# Database - Use in-memory SQLite for tests
DATABASE_URL=sqlite:///:memory:
DB_ECHO_LOG=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# JWT Configuration - Use test-safe values
JWT_SECRET_KEY=test-secret-key-for-testing-only-32-chars-minimum
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=INFO
DEBUG=true

# API Configuration
API_VERSION=v1

# Service URLs (use mock/test endpoints)
GS_SERVICE_URL=http://localhost:8001
AC_SERVICE_URL=http://localhost:8002
PGC_SERVICE_URL=http://localhost:8003
FV_SERVICE_URL=http://localhost:8004
EC_SERVICE_URL=http://localhost:8005
AUTH_SERVICE_URL=http://localhost:8006
INTEGRITY_SERVICE_URL=http://localhost:8007

# AI API Keys (use test/mock values)
ANTHROPIC_API_KEY=test-anthropic-key
OPENAI_API_KEY=test-openai-key
GOOGLE_API_KEY=test-google-key

# Redis Configuration (use mock for tests)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Security Settings
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Performance Settings
MAX_WORKERS=1
WORKER_TIMEOUT=30

# Feature Flags for Testing
ENABLE_METRICS=false
ENABLE_TRACING=false
ENABLE_RATE_LIMITING=false
ENABLE_CACHING=false

# Test-specific settings
PYTEST_CURRENT_TEST=true
TESTING=true
