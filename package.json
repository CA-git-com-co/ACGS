{
  "name": "acgs-monorepo",
  "version": "1.0.0",
  "description": "ACGS-1 Constitutional Governance System - Monorepo Root",
  "private": true,
  "type": "module",
  "workspaces": [
    "applications/*",
    "blockchain",
    "tools/mcp-inspector"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspaces",
    "build": "npm run build --workspaces",
    "build:blockchain": "cd blockchain && npm run build",
    "build:apps": "npm run build --workspace=applications/*",
    "test": "npm run test --workspaces",
    "test:blockchain": "cd blockchain && npm run test",
    "test:apps": "npm run test --workspace=applications/*",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md,yml,yaml}\"",
    "clean": "npm run clean --workspaces && npm run clean:deps",
    "clean:deps": "find . -name 'node_modules' -type d -prune -exec rm -rf {} + && find . -name 'package-lock.json' -delete",
    "clean:build": "find . -name 'dist' -type d -prune -exec rm -rf {} + && find . -name 'build' -type d -prune -exec rm -rf {} + && find . -name '.next' -type d -prune -exec rm -rf {} +",
    "deps:audit": "npm audit --workspaces",
    "deps:update": "npm update --workspaces",
    "deps:outdated": "npm outdated --workspaces",
    "prepare": "husky install",
    "postinstall": "npm run setup:git-hooks",
    "setup:git-hooks": "husky install && husky add .husky/pre-commit 'npm run lint && npm run format:check'",
    "dev": "concurrently \"npm run dev --workspace=applications/app\" \"npm run dev --workspace=applications/governance-dashboard\"",
    "start": "npm run start --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CA-git-com-co/ACGS.git"
  },
  "keywords": [
    "acgs",
    "constitutional",
    "governance",
    "ai",
    "blockchain",
    "solana",
    "monorepo"
  ],
  "author": "ACGS-1 Team <info@soln.ai>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/CA-git-com-co/ACGS/issues"
  },
  "homepage": "https://github.com/CA-git-com-co/ACGS#readme",
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2022": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "prefer-const": "error",
      "no-var": "error"
    },
    "ignorePatterns": [
      "node_modules/",
      "dist/",
      "build/",
      ".next/",
      "target/"
    ]
  },
  "overrides": {
    "serialize-javascript": ">=6.0.2"
  }
}
