{
  "name": "acgs-monorepo",
  "version": "1.0.0",
  "description": "ACGS-1 Constitutional Governance System - Monorepo Root",
  "private": true,
  "type": "module",
  "workspaces": [
    "applications/*",
    "blockchain"
  ],
  "scripts": {
    "install:all": "pnpm install",
    "install:workspaces": "pnpm install --recursive",
    "build": "pnpm run --recursive build",
    "build:blockchain": "cd blockchain && pnpm run build",
    "build:apps": "pnpm run --filter='applications/*' build",
    "test": "pnpm run --recursive test",
    "test:blockchain": "cd blockchain && pnpm run test",
    "test:apps": "pnpm run --filter='applications/*' test",
    "lint": "pnpm run --recursive lint",
    "lint:fix": "pnpm run --recursive lint:fix",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md,yml,yaml}\"",
    "clean": "pnpm run --recursive clean && pnpm run clean:deps",
    "clean:deps": "find . -name 'node_modules' -type d -prune -exec rm -rf {} + && find . -name 'pnpm-lock.yaml' -delete",
    "clean:build": "find . -name 'dist' -type d -prune -exec rm -rf {} + && find . -name 'build' -type d -prune -exec rm -rf {} + && find . -name '.next' -type d -prune -exec rm -rf {} +",
    "deps:audit": "pnpm audit",
    "deps:update": "pnpm update --recursive",
    "deps:outdated": "pnpm outdated --recursive",
    "prepare": "husky",
    "postinstall": "echo 'Dependencies installed successfully'",
    "dev": "concurrently \"pnpm run --filter=applications/app dev\" \"pnpm run --filter=applications/governance-dashboard dev\"",
    "start": "pnpm run --recursive start"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CA-git-com-co/ACGS.git"
  },
  "keywords": [
    "acgs",
    "constitutional",
    "governance",
    "ai",
    "blockchain",
    "solana",
    "monorepo"
  ],
  "author": "ACGS-1 Team <info@soln.ai>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/CA-git-com-co/ACGS/issues"
  },
  "homepage": "https://github.com/CA-git-com-co/ACGS#readme",
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2022": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "prefer-const": "error",
      "no-var": "error"
    },
    "ignorePatterns": [
      "node_modules/",
      "dist/",
      "build/",
      ".next/",
      "target/"
    ]
  },
  "overrides": {
    "serialize-javascript": ">=6.0.2"
  }
}
