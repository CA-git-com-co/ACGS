# ACGS Next.js Application Environment Configuration
# Copy this file to .env.local and update the values as needed

# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================

# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# =============================================================================
# ACGS SERVICE URLS
# =============================================================================

# Core ACGS Services
NEXT_PUBLIC_AUTH_API_URL=http://localhost:8002/api/v1
NEXT_PUBLIC_AC_API_URL=http://localhost:8001/api/v1
NEXT_PUBLIC_INTEGRITY_API_URL=http://localhost:8006/api/v1
NEXT_PUBLIC_FV_API_URL=http://localhost:8004/api/v1
NEXT_PUBLIC_GS_API_URL=http://localhost:8003/api/v1
NEXT_PUBLIC_PGC_API_URL=http://localhost:8005/api/v1
NEXT_PUBLIC_EC_API_URL=http://localhost:8007/api/v1

# =============================================================================
# SOLANA BLOCKCHAIN CONFIGURATION
# =============================================================================

# Solana Network Configuration
NEXT_PUBLIC_SOLANA_NETWORK=devnet
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
NEXT_PUBLIC_QUANTUMAGI_PROGRAM_ID=8eRUCnQsDxqK7vjp5XsYs7C3NGpdhzzaMW8QQGzfTUV4

# Solana Program IDs
NEXT_PUBLIC_APPEALS_PROGRAM_ID=CXKCLqyzxqyqTbEgpNbYR5qkC691BdiKMAB1nk6BMoFJ
NEXT_PUBLIC_LOGGING_PROGRAM_ID=CjZi5hi9qggBzbXDht9YSJhN5cw7Bhz3rHhn63QQcPQo

# =============================================================================
# REAL-TIME MONITORING CONFIGURATION
# =============================================================================

# WebSocket URLs for real-time monitoring
NEXT_PUBLIC_FIDELITY_MONITOR_WS_URL=ws://localhost:8004/api/v1/ws/fidelity-monitor
NEXT_PUBLIC_HEALTH_MONITOR_WS_URL=ws://localhost:8004/api/v1/ws/health-monitor

# Monitoring Configuration
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true

# =============================================================================
# FEATURE FLAGS CONFIGURATION
# =============================================================================

# Migration Phase Configuration
NEXT_PUBLIC_MIGRATION_PHASE=foundation
NEXT_PUBLIC_MIGRATION_VERSION=1.0.0

# Infrastructure Feature Flags
NEXT_PUBLIC_USE_SHARED_THEME=true
NEXT_PUBLIC_USE_SHARED_AUTH=true
NEXT_PUBLIC_USE_SHARED_LAYOUT=false
NEXT_PUBLIC_USE_SHARED_ERROR_HANDLING=false

# Component Migration Flags
NEXT_PUBLIC_USE_SHARED_DASHBOARD=false
NEXT_PUBLIC_USE_SHARED_QUANTUMAGI=false
NEXT_PUBLIC_USE_SHARED_MONITORING=false

# Service Migration Flags
NEXT_PUBLIC_USE_SHARED_CONSULTATION=false
NEXT_PUBLIC_USE_SHARED_AMENDMENT=false

# Page Migration Flags
NEXT_PUBLIC_USE_SHARED_PAGES=false
NEXT_PUBLIC_USE_SHARED_ROUTING=false

# Emergency Flags
NEXT_PUBLIC_EMERGENCY_ROLLBACK=false
NEXT_PUBLIC_MAINTENANCE_MODE=false

# Next.js Specific Flags
NEXT_PUBLIC_USE_SERVER_COMPONENTS=true
NEXT_PUBLIC_USE_APP_ROUTER=true
NEXT_PUBLIC_USE_OPTIMIZED_IMAGES=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug and Development
NEXT_PUBLIC_DEBUG_FEATURE_FLAGS=true
NEXT_PUBLIC_SHOW_MIGRATION_BANNER=true
NEXT_PUBLIC_LOG_LEVEL=info

# Performance Targets
NEXT_PUBLIC_PERFORMANCE_TARGET_RESPONSE_TIME=500
NEXT_PUBLIC_PERFORMANCE_TARGET_UPTIME=99.5
NEXT_PUBLIC_PERFORMANCE_TARGET_ERROR_RATE=0.02

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Security Configuration
NEXT_PUBLIC_ENABLE_CSRF_PROTECTION=true
NEXT_PUBLIC_ENABLE_CONTENT_SECURITY_POLICY=true
NEXT_PUBLIC_SECURE_COOKIES=true

# =============================================================================
# DATABASE CONFIGURATION (if needed)
# =============================================================================

# Database URL (uncomment if using database)
# DATABASE_URL=postgresql://username:password@localhost:5432/acgs_db

# =============================================================================
# EXTERNAL SERVICES (if needed)
# =============================================================================

# Email Service (uncomment if using email)
# EMAIL_SERVER_HOST=smtp.example.com
# EMAIL_SERVER_PORT=587
# EMAIL_SERVER_USER=your-email@example.com
# EMAIL_SERVER_PASSWORD=your-email-password
# EMAIL_FROM=noreply@acgs.example.com

# Analytics (uncomment if using analytics)
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# Error Tracking (uncomment if using Sentry)
# SENTRY_DSN=your-sentry-dsn
# NEXT_PUBLIC_SENTRY_DSN=your-public-sentry-dsn
