{
  "dashboard": {
    "id": null,
    "title": "ACGS-1 PgBouncer Performance Dashboard",
    "tags": [
      "acgs",
      "pgbouncer",
      "database",
      "performance"
    ],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "PgBouncer Status",
        "type": "stat",
        "targets": [
          {
            "expr": "pgbouncer_up",
            "legendFormat": "PgBouncer Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            },
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DOWN"
                  }
                },
                "type": "value"
              },
              {
                "options": {
                  "1": {
                    "text": "UP"
                  }
                },
                "type": "value"
              }
            ]
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Total Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(pgbouncer_total_connections)",
            "legendFormat": "Total Connections"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Active Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(pgbouncer_active_connections)",
            "legendFormat": "Active Connections"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Waiting Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(pgbouncer_waiting_connections)",
            "legendFormat": "Waiting Connections"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 10
                },
                {
                  "color": "red",
                  "value": 50
                }
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 5,
        "title": "Connection Pool Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "pgbouncer_pool_used",
            "legendFormat": "Used - {{database}}"
          },
          {
            "expr": "pgbouncer_pool_size",
            "legendFormat": "Size - {{database}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        }
      },
      {
        "id": 6,
        "title": "Request Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(pgbouncer_total_requests_total[5m])",
            "legendFormat": "Requests/sec - {{database}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "reqps"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 4
        }
      },
      {
        "id": 7,
        "title": "Average Request Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "pgbouncer_avg_request_time_seconds * 1000",
            "legendFormat": "Avg Request Time - {{database}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "ms",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 100
                },
                {
                  "color": "red",
                  "value": 500
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 12
        }
      },
      {
        "id": 8,
        "title": "Average Wait Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "pgbouncer_avg_wait_time_seconds * 1000",
            "legendFormat": "Avg Wait Time - {{database}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "ms",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "red",
                  "value": 200
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 12
        }
      },
      {
        "id": 9,
        "title": "Network Traffic",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(pgbouncer_total_received_bytes_total[5m])",
            "legendFormat": "Received - {{database}}"
          },
          {
            "expr": "rate(pgbouncer_total_sent_bytes_total[5m])",
            "legendFormat": "Sent - {{database}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "Bps"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 20
        }
      },
      {
        "id": 10,
        "title": "Connection Distribution by Database",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (database) (pgbouncer_total_connections)",
            "legendFormat": "{{database}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 20
        }
      },
      {
        "id": 11,
        "title": "Performance Metrics Table",
        "type": "table",
        "targets": [
          {
            "expr": "pgbouncer_total_connections",
            "legendFormat": "",
            "format": "table",
            "instant": true
          },
          {
            "expr": "pgbouncer_active_connections",
            "legendFormat": "",
            "format": "table",
            "instant": true
          },
          {
            "expr": "pgbouncer_avg_request_time_seconds * 1000",
            "legendFormat": "",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true,
                "instance": true,
                "job": true
              },
              "renameByName": {
                "Value #A": "Total Connections",
                "Value #B": "Active Connections",
                "Value #C": "Avg Request Time (ms)"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Avg Request Time (ms)"
              },
              "properties": [
                {
                  "id": "thresholds",
                  "value": {
                    "steps": [
                      {
                        "color": "green",
                        "value": 0
                      },
                      {
                        "color": "yellow",
                        "value": 100
                      },
                      {
                        "color": "red",
                        "value": 500
                      }
                    ]
                  }
                }
              ]
            }
          ]
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 28
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "database",
          "type": "query",
          "query": "label_values(pgbouncer_total_connections, database)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "changes(pgbouncer_up[1m]) > 0",
          "titleFormat": "PgBouncer Restart",
          "textFormat": "PgBouncer service restarted"
        }
      ]
    }
  },
