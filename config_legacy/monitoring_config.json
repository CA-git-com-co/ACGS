{
  "prometheus": {
    "scrape_interval": "15s",
    "evaluation_interval": "15s",
    "retention": "30d",
    "targets": [
      "localhost:8000",
      "localhost:8001",
      "localhost:8002",
      "localhost:8003",
      "localhost:8004",
      "localhost:8005",
      "localhost:8006"
    ]
  },
  "alerting_rules": [
    {
      "alert": "ServiceDown",
      "expr": "up == 0",
      "for": "1m",
      "severity": "critical"
    },
    {
      "alert": "HighResponseTime",
      "expr": "http_request_duration_seconds > 2",
      "for": "5m",
      "severity": "warning"
    },
    {
      "alert": "HighErrorRate",
      "expr": "rate(http_requests_total{status=~\"5..\"}[5m]) > 0.1",
      "for": "5m",
      "severity": "critical"
    }
  ],
  "grafana_dashboards": [
    "ACGS-1 System Overview",
    "Service Performance Metrics",
    "Constitutional Governance Metrics",
    "Security and Compliance Dashboard"
  ]
}
