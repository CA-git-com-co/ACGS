{
  "id": "STAB-PERF001",
  "name": "Performance Monitoring Stabilizer",
  "description": "Monitors and validates performance characteristics of policy generation processes",
  "image": "acgs/performance-monitoring-stabilizer:latest",
  "version": "1.0.0",
  "domains": ["operations", "performance"],
  "timeout": 30,
  "config": {
    "memory_limit": "256MB",
    "cpu_limit": 0.5,
    "environment_variables": {
      "RESPONSE_TIME_THRESHOLD": "500",
      "MEMORY_THRESHOLD": "100",
      "CPU_THRESHOLD": "80"
    },
    "validation_rules": [
      {
        "rule_type": "performance",
        "rule_expression": "response_time_ms <= 500",
        "severity": "high"
      },
      {
        "rule_type": "performance",
        "rule_expression": "memory_usage_mb <= 100",
        "severity": "medium"
      },
      {
        "rule_type": "performance",
        "rule_expression": "cpu_usage_percent <= 80",
        "severity": "medium"
      }
    ]
  },
  "error_patterns": [
    {
      "pattern_id": "RESPONSE_TIME_EXCEEDED",
      "pattern_regex": "response.*time.*exceeded|timeout",
      "error_type": "performance_issue",
      "correction_strategy": "circuit_breaker"
    },
    {
      "pattern_id": "MEMORY_EXHAUSTION",
      "pattern_regex": "memory.*exhausted|out.*of.*memory",
      "error_type": "performance_issue",
      "correction_strategy": "automatic_retry"
    },
    {
      "pattern_id": "CPU_OVERLOAD",
      "pattern_regex": "cpu.*overload|high.*cpu.*usage",
      "error_type": "performance_issue",
      "correction_strategy": "circuit_breaker"
    }
  ],
  "constitutional_compliance": {
    "required_hash": "cdd01ef066bc6cf2",
    "compliance_checks": ["performance_standards"],
    "minimum_compliance_score": 0.8
  },
  "created_at": "2024-01-01T00:00:00Z",
  "updated_at": "2024-01-01T00:00:00Z",
  "enabled": true
}
