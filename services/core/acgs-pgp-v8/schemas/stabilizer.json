{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Stabilizer Definition",
  "type": "object",
  "required": ["id", "name", "image", "domains", "timeout"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^STAB-[A-Z0-9]{8}$",
      "description": "Unique stabilizer identifier in format STAB-XXXXXXXX"
    },
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 100,
      "description": "Human-readable stabilizer name"
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Detailed description of stabilizer functionality"
    },
    "image": {
      "type": "string",
      "description": "Docker image name for stabilizer execution"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the stabilizer"
    },
    "domains": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["governance", "policy", "security", "compliance", "operations"]
      },
      "description": "Applicable domains for this stabilizer"
    },
    "timeout": {
      "type": "integer",
      "minimum": 1,
      "maximum": 300,
      "description": "Execution timeout in seconds"
    },
    "config": {
      "type": "object",
      "description": "Stabilizer configuration parameters",
      "properties": {
        "memory_limit": {
          "type": "string",
          "pattern": "^\\d+[MG]B?$",
          "description": "Memory limit (e.g., 512MB, 1GB)"
        },
        "cpu_limit": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 4.0,
          "description": "CPU limit in cores"
        },
        "environment_variables": {
          "type": "object",
          "description": "Environment variables for stabilizer"
        },
        "validation_rules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "rule_type": {
                "type": "string",
                "enum": ["syntax", "semantic", "constitutional", "performance"]
              },
              "rule_expression": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": ["critical", "high", "medium", "low"]
              }
            }
          }
        }
      }
    },
    "error_patterns": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "pattern_id": {
            "type": "string"
          },
          "pattern_regex": {
            "type": "string"
          },
          "error_type": {
            "type": "string",
            "enum": [
              "syntax_error",
              "semantic_error",
              "constitutional_violation",
              "performance_issue"
            ]
          },
          "correction_strategy": {
            "type": "string",
            "enum": ["automatic_retry", "fallback_mode", "manual_intervention", "circuit_breaker"]
          }
        }
      },
      "description": "Error patterns this stabilizer can detect and correct"
    },
    "constitutional_compliance": {
      "type": "object",
      "properties": {
        "required_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{16}$",
          "default": "cdd01ef066bc6cf2"
        },
        "compliance_checks": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of constitutional principles to validate"
        },
        "minimum_compliance_score": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.8
        }
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "enabled": {
      "type": "boolean",
      "default": true,
      "description": "Whether the stabilizer is enabled"
    }
  },
  "additionalProperties": false
}
