{
  "dashboard": {
    "id": null,
    "title": "DGM Performance Analysis",
    "tags": ["dgm", "performance", "analysis"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Performance Scores by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "dgm_performance_score",
            "legendFormat": "{{service}}"
          }
        ],
        "yAxes": [
          {"label": "Score", "min": 0, "max": 1},
          {"show": false}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Performance Improvements",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(dgm_performance_improvement_percent_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(dgm_performance_improvement_percent_bucket[5m]))",
            "legendFormat": "Median"
          }
        ],
        "yAxes": [
          {"label": "Improvement %", "min": -50, "max": 100},
          {"show": false}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Improvement Duration Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(dgm_improvement_duration_seconds_bucket[5m])",
            "legendFormat": "{{le}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Bandit Algorithm Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "dgm_bandit_exploration_rate",
            "legendFormat": "Exploration Rate - {{algorithm}}"
          }
        ],
        "yAxes": [
          {"label": "Rate", "min": 0, "max": 1},
          {"show": false}
        ],
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Bandit Arm Rewards",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(dgm_bandit_arm_reward_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(dgm_bandit_arm_reward_bucket[5m]))",
            "legendFormat": "Median"
          }
        ],
        "yAxes": [
          {"label": "Reward", "min": -1, "max": 1},
          {"show": false}
        ],
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 6,
        "title": "Database Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(dgm_database_query_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile - {{operation}}"
          }
        ],
        "yAxes": [
          {"label": "Seconds", "min": 0},
          {"show": false}
        ],
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 22}
      },
      {
        "id": 7,
        "title": "Cache Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "dgm_cache_hit_rate",
            "legendFormat": "Hit Rate"
          }
        ],
        "yAxes": [
          {"label": "Rate", "min": 0, "max": 1},
          {"show": false}
        ],
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 22}
      }
    ]
  }
}
